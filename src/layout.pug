block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title #{title}
    link(rel="stylesheet", href="/node_modules/owl.carousel/dist/assets/owl.carousel.min.css")
    link(rel="stylesheet", href="/bower_components/owl.carousel/dist/assets/owl.carousel.min.css")
    block scripts
      script(src='/node_modules/jquery/dist/jquery.js')
      script(src='/node_modules/owl.carousel/dist/owl.carousel.min.js')
      script(src="/bower_components/jquery/dist/jquery.js")
      script(src="/bower_components/owl.carousel/dist/owl.carousel.min.js")
      script(src="/index.js" type="module")


  body
    header.sidebar
      .sidebar__start
        .logo
          a(href="index.html")
            img(src=require('./assets/icons/logo.png') alt="logo-icon")

        .avatar
          img(src=require('./assets/other/avatar.jpg') alt="avatar")

        .sidebar__add-task
          a(href="new.html")
            img(src=require('./assets/icons/add-goal.png') alt="add-icon")

      .sidebar__handlers
        .sidebar__handlers-general
          a(href="index.html")
            img(src=require('./assets/icons/dashboard.png') alt="dash-icon")

        .sidebar__handlers-tasks
          a(href="tasks.html")
            img(src=require('./assets/icons/layer.png') alt="layer-icon")

        .sidebar__handlers-settings
          a(href="settings.html")
            img(src=require('./assets/icons/settings.png') alt="settings-icon")

      .sidebar__assistance
        .sidebar__assistance-help
          a(href="help.html")
            img(src=require('./assets/icons/help.png') alt="help-icon")
        .sidebar__assistance-exit
          a(href="exit.html")
            img(src=require('./assets/icons/logout.png') alt="logout-icon")
      
    .sidebar-mob 
        .logo
            a(href="#")
                img(src=require('./assets/icons/logo.png') alt="logo-icon")
        .add-task
            a(href="#") 
                img(src=require('./assets/icons/add-goal.png') alt="add-icon")
        .avatar
            a(href="#") 
                img(src=require('./assets/other/avatar.jpg') alt="avatar")
    main
        block main